{% extends('layout.twig') %}
{% block content%}
    <ul>
    {% for error in errors %}
        <li> {{ error }} </li>
    {% endfor %}
    </ul>
    <form method="post" action="/book/store" enctype="multipart/form-data">
        <div class="form-group">
            <label for="email">Title:</label>
            <input type="text" class="form-control" id="title" name="title" value="{{ oldRequest['title'] }}">
        </div>
        <div class="form-group">
            <label for="pwd">Author:</label>
            <input type="text" class="form-control" id="author" name="author">
        </div>
        <div class="form-group">
            <label for="pwd">Price:</label>
            <input type="text" class="form-control" id="price" name="price">
        </div>
        <div class="form-group">
            <label for="pwd">Cover:</label>
            <input type="file" class="form-control" id="price" name="cover">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}